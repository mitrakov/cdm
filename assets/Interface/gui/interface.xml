<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    
    <screen id="empty" controller="de.lessvoid.nifty.screen.DefaultScreenController">
        <layer childLayout="center"/>
    </screen>
    
    <screen id="landing" controller="ru.mitrakov.self.cdm.client.gui.GuiLandingController">
        <layer childLayout="center">
            <panel width="50%" height="50%" align="center" valign="center" childLayout="vertical" backgroundColor="#55a5" padding="10">
                <control id="btn_play"     name="button" align="center" height="40px" width="50%" marginTop="10px" label="Играть" />
                <control id="btn_sign_in"  name="button" align="center" height="40px" width="50%" marginTop="10px" label="Авторизация" />
                <control id="btn_sign_up"  name="button" align="center" height="40px" width="50%" marginTop="10px" label="Регистрация" />
                <control id="btn_settings" name="button" align="center" height="40px" width="50%" marginTop="10px" label="Настройки" />
                <control id="btn_quit"     name="button" align="center" height="40px" width="50%" marginTop="10px" label="Выход" />
            </panel>
        </layer>
    </screen>
    
    <screen id="landing_auth" controller="ru.mitrakov.self.cdm.client.gui.GuiLandingController">
        <layer childLayout="center">
            <panel width="50%" height="50%" align="center" valign="center" childLayout="vertical" backgroundColor="#55a5" padding="10">
                <control id="btn_play"     name="button" align="center" height="40px" width="50%" marginTop="10px" label="Играть" />
                <control id="btn_settings" name="button" align="center" height="40px" width="50%" marginTop="10px" label="Настройки" />
                <control id="btn_quit"     name="button" align="center" height="40px" width="50%" marginTop="10px" label="Выход" />
            </panel>
        </layer>
    </screen>

    <screen id="sign_in" controller="ru.mitrakov.self.cdm.client.gui.GuiSignInController">
        <layer childLayout="center">
            <panel width="75%" height="75%" align="center" valign="center" childLayout="vertical" backgroundColor="#55a5" padding="10">
                <panel height="15%" backgroundColor="#55aa" childLayout="center" padding="10">
                    <control name="label" text="Авторизация" align="center" font="de/fonts/trix.fnt" height="80px" width="95%" />
                </panel>
                <panel height="10px" />
                <control id="lab_login" name="label" text="Логин" font="de/fonts/trix.fnt" height="80px" width="95%" />
                <control id="txt_login" name="textfield" width="45%" height="10%" align="center" valign="center" />
                
                <panel height="10px" />
                <control id="lab_pass"  name="label" text="Пароль" font="de/fonts/trix.fnt" height="80px" width="95%" />
                <control id="txt_pass"  name="textfield" passwordChar="*" width="45%" height="10%" align="center" valign="center" />
                
                <panel height="40px" />
                <panel width="60%" height="35px" childLayout="horizontal" align="right" visibleToMouse="true">
                    <control id="ok"     name="button" marginRight="5" height="40px" width="50%" label="OK" />
                    <control id="cancel" name="button" marginRight="5" height="40px" width="50%" label="Отмена" />
                </panel>
            </panel>
        </layer>
    </screen>
    
    <screen id="sign_up" controller="ru.mitrakov.self.cdm.client.gui.GuiSignUpController">
        <layer childLayout="center">
            <panel width="75%" height="75%" align="center" valign="center" childLayout="vertical" backgroundColor="#55a5" padding="10">
                <panel height="15%" backgroundColor="#55aa" childLayout="center" padding="10">
                    <control name="label" text="Регистрация" align="center" font="de/fonts/trix.fnt" height="80px" width="95%" />
                </panel>
                <control id="lab_email" name="label"     width="95%" height="50px" text="Электронная почта" font="de/fonts/trix.fnt" />
                <control id="txt_email" name="textfield" width="45%" height="10%" align="center" valign="center" />
                
                <control id="lab_login" name="label"     width="95%" height="50px" text="Логин" font="de/fonts/trix.fnt" />
                <control id="txt_login" name="textfield" width="45%" height="10%" align="center" valign="center" />
                
                <control id="lab_pass"  name="label"     width="95%" height="50px" text="Пароль" font="de/fonts/trix.fnt" />
                <control id="txt_pass"  name="textfield" width="45%" height="10%" align="center" valign="center" passwordChar="*"/>
                
                <panel height="30px" />
                <panel width="60%" height="35px" childLayout="horizontal" align="right" visibleToMouse="true">
                    <control id="ok"     name="button" marginRight="5" height="40px" width="50%" label="OK" />
                    <control id="cancel" name="button" marginRight="5" height="40px" width="50%" label="Отмена" />
                </panel>
            </panel>
        </layer>
    </screen>
    
    <screen id="main" controller="ru.mitrakov.self.cdm.client.gui.GuiMainController">
        <layer childLayout="center">
            <panel childLayout="horizontal" backgroundColor="#55a5" padding="5">
                <panel id="red" width="80%" childLayout="vertical" backgroundColor="#f008" padding="5">
                    <panel id="green1" childLayout="horizontal" height="30%" backgroundColor="#2408">
                        <panel id="pan_unit0" childLayout="vertical" width="20%" backgroundColor="#9d28" visibleToMouse="true">
                            <control id="label_unit0" name="label" align="center" font="de/fonts/trix.fnt" height="30px" width="100%"/>
                            <image filename="Interface/images/userUnit.png" width="100%" height="80%" />
                        </panel>
                        <panel id="pan_unit1" childLayout="vertical" width="20%" backgroundColor="#8c28" visibleToMouse="true">
                            <control id="label_unit1" name="label" align="center" font="de/fonts/trix.fnt" height="30px" width="100%"/>
                            <image filename="Interface/images/userUnit.png" width="100%" height="80%" />
                        </panel>
                        <panel id="pan_unit2" childLayout="vertical" width="20%" backgroundColor="#7b28" visibleToMouse="true">
                            <control id="label_unit2" name="label" align="center" font="de/fonts/trix.fnt" height="30px" width="100%"/>
                            <image filename="Interface/images/userUnit.png" width="100%" height="80%" />
                        </panel>
                        <panel id="pan_unit3" childLayout="vertical" width="20%" backgroundColor="#8c28" visibleToMouse="true">
                            <control id="label_unit3" name="label" align="center" font="de/fonts/trix.fnt" height="30px" width="100%"/>
                            <image filename="Interface/images/userUnit.png" width="100%" height="80%" />
                        </panel>
                        <panel id="pan_unit4" childLayout="vertical" width="20%" backgroundColor="#9d28" visibleToMouse="true">
                            <control id="label_unit4" name="label" align="center" font="de/fonts/trix.fnt" height="30px" width="100%"/>
                            <image filename="Interface/images/userUnit.png" width="100%" height="80%" />
                        </panel>
                    </panel>
                    <panel id="green2" height="30%" backgroundColor="#5a08" />
                    <panel id="green3" height="40%" childLayout="horizontal" backgroundColor="#b498" padding="5">
                        <panel id="ev1" childLayout="vertical" backgroundColor="#ad58" padding="5">
                            <control id="lab_1" name="label" height="50px" width="100%" text="События" font="de/fonts/trix.fnt" backgroundColor="#22e8"/>
                            <panel id="head21" backgroundColor="#49f8"/>
                        </panel>
                        <panel id="ev2" childLayout="vertical" backgroundColor="#b918" padding="5">
                            <control id="lab_2" name="label" height="50px" width="100%" text="Друзья" font="de/fonts/trix.fnt" backgroundColor="#22e8"/>
                            <panel id="head22" backgroundColor="#49f8"/>
                        </panel>
                        <panel id="ev3" childLayout="vertical" backgroundColor="#cf78" padding="5">
                            <control id="lab_3" name="label" height="50px" width="100%" text="История" font="de/fonts/trix.fnt" backgroundColor="#22e8"/>
                            <panel id="head23" backgroundColor="#49f8"/>
                        </panel>
                        <panel id="ev4" childLayout="vertical" backgroundColor="#2d48" padding="5">
                            <control id="lab_4" name="label" height="50px" width="100%" text="Статистика" font="de/fonts/trix.fnt" backgroundColor="#22e8"/>
                            <panel id="head24" backgroundColor="#49f8"/>
                        </panel>
                    </panel>
                </panel>
                <panel id="green" childLayout="vertical" backgroundColor="#0f08" >
                    <panel id="atata" height="20%"/>
                    <control id="btn_main0" name="button" align="center" height="40px" width="90%" marginTop="10px" marginBottom="10px" label="Кнопка" />
                    <control id="btn_main1" name="button" align="center" height="40px" width="90%" marginTop="10px" marginBottom="10px" label="Кнопка" />
                    <control id="btn_main2" name="button" align="center" height="40px" width="90%" marginTop="10px" marginBottom="10px" label="Кнопка" />
                    <control id="btn_main3" name="button" align="center" height="40px" width="90%" marginTop="10px" marginBottom="10px" label="Кнопка" />
                    <control id="btn_main4" name="button" align="center" height="40px" width="90%" marginTop="10px" marginBottom="10px" label="Кнопка" />
                    <control id="btn_main5" name="button" align="center" height="40px" width="90%" marginTop="10px" marginBottom="10px" label="Кнопка" />
                </panel>
            </panel>
        </layer>
    </screen>
    
    <screen id="settings" controller="ru.mitrakov.self.cdm.client.gui.GuiSettingsController">
        <layer childLayout="center">
            <panel width="50%" height="50%" align="center" valign="center" childLayout="vertical" backgroundColor="#55a5" padding="10">
                <control id="btn_logout" name="button" align="center" height="40px" width="50%" marginTop="10px" label="Заверш. сеанс" />
                <control id="btn_back"   name="button" align="center" height="40px" width="50%" marginTop="10px" label="Назад" />
            </panel>
        </layer>
    </screen>

    <screen id="invite" controller="ru.mitrakov.self.cdm.client.gui.GuiInviteController">
        <layer childLayout="center">
            <panel width="75%" height="75%" align="center" valign="center" childLayout="vertical" backgroundColor="#55a5" padding="10">
                <panel height="*" backgroundColor="#55aa" childLayout="center" padding="10">
                    <control id="invite_txt" name="label" align="center" valign="center" font="de/fonts/trix.fnt" height="80px" width="95%" />
                </panel>
                <panel height="10px" />
                <panel width="60%" height="35px" childLayout="horizontal" align="right" visibleToMouse="true">
                    <control id="accept" name="button" height="40px" width="50%" label="Принять" />
                    <control id="reject" name="button" height="40px" width="50%" label="Отказаться" />
                </panel>
            </panel>
        </layer>
    </screen>
    
    <screen id="weapon" controller="ru.mitrakov.self.cdm.client.gui.GuiWeaponController">
        <layer childLayout="center">
            <panel width="30%" height="30%" align="center" valign="center" childLayout="vertical" backgroundColor="#55a5" padding="10">                
                <control id="lst_weapon" name="listBox" vertical="optional" horizontal="optional" 
                         displayItems="6" selectionMode="Single" forceSelection="true"
                         width="*" height="100%" childLayout="vertical" visibleToMouse="true">
                </control>
            </panel>
        </layer>
    </screen>
    
<!-- ======= POPUP SCREENS ======= -->
    <popup id="popup_find" childLayout="center" backgroundColor="#000a" controller="ru.mitrakov.self.cdm.client.gui.GuiFindController">
        <panel width="75%" height="40%" align="center" valign="center" childLayout="vertical" backgroundColor="#55a5" padding="10">
            <control id="lbl" name="label" width="95%" height="40px" align="center" valign="center" font="de/fonts/trix.fnt" text="Введите имя соперника" />
            <control id="popup_find_txt" name="textfield" width="45%" height="40px" align="center" valign="center" />
            <panel height="30px" />
            <panel width="60%" height="35px" childLayout="horizontal" align="right" visibleToMouse="true">
                <control id="popup_find_ok"     name="button" marginRight="5" height="40px" width="50%" label="OK" />
                <control id="popup_find_cancel" name="button" marginRight="5" height="40px" width="50%" label="Отмена" />
            </panel>
        </panel>
    </popup>
    
    <popup id="popup_reject" childLayout="center" backgroundColor="#000a" controller="ru.mitrakov.self.cdm.client.gui.GuiPopupController">
        <panel width="75%" height="40%" align="center" valign="center" childLayout="vertical" backgroundColor="#55a5" padding="10">
            <control id="lbl_reject" name="label" width="95%" height="40px" align="center" valign="center" font="de/fonts/trix.fnt" />
            <panel height="30px" />
            <control id="popup_close" name="button" align="center" marginRight="5" height="40px" width="50%" label="OK" />
        </panel>
    </popup>
    
    <popup id="popup_victory" childLayout="center" backgroundColor="#000a" controller="ru.mitrakov.self.cdm.client.gui.GuiPopupController">
        <panel width="75%" height="40%" align="center" valign="center" childLayout="vertical" backgroundColor="#55a5" padding="10">
            <control id="lbl_victory" name="label" width="95%" height="40px" align="center" valign="center" font="de/fonts/trix.fnt" />
            <panel height="30px" />
            <control id="popup_goto_main" name="button" align="center" marginRight="5" height="40px" width="50%" label="OK" />
        </panel>
    </popup>
    
    <popup id="popup_rename_unit" childLayout="center" backgroundColor="#000a" controller="ru.mitrakov.self.cdm.client.gui.GuiRenameUnitController">
        <panel width="75%" height="40%" align="center" valign="center" childLayout="vertical" backgroundColor="#55a5" padding="10">
            <control name="label" width="95%" height="40px" align="center" valign="center" font="de/fonts/trix.fnt" text="Введите новое имя" />
            <control id="popup_rename_txt" name="textfield" width="45%" height="40px" align="center" valign="center" />
            <panel height="30px" />
            <panel width="60%" height="35px" childLayout="horizontal" align="right" visibleToMouse="true">
                <control id="popup_ok"     name="button" marginRight="5" height="40px" width="50%" label="OK" />
                <control id="popup_close" name="button" marginRight="5" height="40px" width="50%" label="Отмена" />
            </panel>
        </panel>
    </popup>
</nifty>
